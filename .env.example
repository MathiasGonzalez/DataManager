# ============================================
# PostgreSQL Multi-Project Server Configuration
# ============================================
# This is a generic PostgreSQL server setup for hosting
# multiple project databases on a VPS.
#
# IMPORTANT: Change the default password before deployment!

# ============================================
# PostgreSQL Database Configuration
# ============================================
# Main database credentials
# Note: POSTGRES_USER is the superuser account
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW

# Initial database (defaults to 'postgres' system database)
# You typically don't need to change this for multi-project setup
POSTGRES_DB=postgres

# Port mapping (host:container)
# WARNING: If exposing to internet, use firewall rules to restrict access
POSTGRES_PORT=5432

# ============================================
# PgBouncer Configuration
# ============================================
# Connection pooling port
PGBOUNCER_PORT=6432

# Connection pool sizing
PGBOUNCER_MAX_CLIENT_CONN=100
PGBOUNCER_DEFAULT_POOL_SIZE=25
PGBOUNCER_MIN_POOL_SIZE=10
PGBOUNCER_RESERVE_POOL_SIZE=5

# Timeout settings (in seconds)
PGBOUNCER_SERVER_IDLE_TIMEOUT=600
PGBOUNCER_MAX_DB_CONNECTIONS=50

